.project-source-selector
  position relative
  .che-template-checker
    max-width 200px
    float left
    & > *
      margin-bottom 5px
      &:first-child
        margin-top 0
      &:last-child
        margin-bottom 0
    .add-project button
      background-color $primary-color
      color white
      height 50px
      &:hover
        background-color darken($primary-color, 10%)

    button
      position relative
      line-height 33px
      border-radius 5px
      float none
      display block
      text-align left
      width 200px
      text-overflow ellipsis
      overflow hidden
      md-icon.cheico-project
        float left
        line-height inherit
      md-icon
        padding 0
        min-width 30px
        text-align center
        &:before
          font-size 14px

  .project-source-popover
    position relative
    display block
    padding 8px
    float left
    min-height 50px
    width calc(100% - 210px)
    max-width inherit

    & > div.arrow
      top: 24px

  md-divider
    border-top-color $box-border-color !important
    margin 0
    margin-top 10px
    margin-bottom 10px

  .project-source-selector-popover
    min-width 800px

    .project-source-selector-popover-toggle-button, .project-source-selector-popover-sources
      margin 10px 35px 25px 35px
